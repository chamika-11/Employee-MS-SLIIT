		<url-pattern>/emplogin </url-pattern>
	</servlet-mapping>
	
		
	
	<servlet>
		<servlet-name>B_Action_Servlet</servlet-name>
		<servlet-class>oop_v2_FM_Employee.B_Action_Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>B_Action_Servlet</servlet-name>
		<url-pattern>/empAction</url-pattern>
	</servlet-mapping>
	
